-- 2. FILE INSTALLER
local function install(filename, data)
    local f = fs.open(filename, "w")
    f.write(data)
    f.close()
end

-- Overwrite old files with the NEW art
install("reactor.nfp", reactor_nfp)
install("minerals.nfp", minerals_nfp)
install("subway.nfp", subway_nfp)

-- 3. SETUP MONITORS
local monitors = { peripheral.find("monitor") }
if #monitors == 0 then error("Connect Wired Modems first!") end

print("Linked to " .. #monitors .. " monitor(s).")

-- 4. DISPLAY ENGINE
local function showAd(filename, duration)
    local image = paintutils.loadImage(filename)
    
    for _, mon in ipairs(monitors) do
        mon.setTextScale(0.5) -- Force HD Mode
        term.redirect(mon)
        mon.setBackgroundColor(colors.black)
        mon.clear()
        paintutils.drawImage(image, 1, 1)
    end
    
    term.redirect(term.native())
    sleep(duration)
end

-- 5. MAIN LOOP
while true do
    showAd("reactor.nfp", 8)
    showAd("minerals.nfp", 8)
    showAd("subway.nfp", 8)
end
